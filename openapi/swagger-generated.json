        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200,
                      "description": "HTTP status code"
                    },
                    "duration": {
                      "type": "string",
                      "example": "5 ms",
                      "description": "Duration of the operation"
                    },
                    "message": {
                      "type": "string",
                      "example": "OK - New files waiting for upload",
                      "description": "Message indicating the success status"
                    },
                    "amount": {
                      "type": "integer",
                      "example": 1,
                      "description": "Amount of files"
                    },
                    "result": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "example": "file.pdf",
                            "description": "File title"
                          },
                          "sha": {
                            "type": "string",
                            "example": "f5b5b7d434ec9f8b69967ac8ca271b1c0724b0809e1e08125f7fddb2dc39c914",
                            "description": "SHA256 hash of the file"
                          },
                          "size": {
                            "type": "integer",
                            "example": 87914,
                            "description": "Size of the file in bytes"
                          }
                        }
                      },
                      "description": "Array containing information about the files"
